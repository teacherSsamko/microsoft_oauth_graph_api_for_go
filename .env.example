# Application (client) ID
CLIENT_ID=your_client_id_here

# Application client secret (only for confidential clients)
# Only needed if using Authorization Code Flow in a web app
CLIENT_SECRET=your_client_secret_here_if_needed

# Azure AD tenant ID
TENANT_ID=your_tenant_id_here

# Graph API scopes
# Comma-separated list of scopes the app requires
GRAPH_USER_SCOPES=User.Read,Mail.Read,Mail.Send 

# Token encryption key
TOKEN_ENCRYPTION_KEY=your_token_encryption_key_here